{% extends 'base.html.twig' %}

{% form_theme sortieForm 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block body %}

    <h3>Modifier une sortie</h3>
    <div>
        {{ form_start(sortieForm) }}
            {{ form_row(sortieForm.nom) }}
            {{ form_row(sortieForm.dateDebut) }}
            {{ form_row(sortieForm.duree) }}
            {{ form_row(sortieForm.dateCloture) }}
            {{ form_row(sortieForm.nbInscriptionsMax) }}
            {{ form_row(sortieForm.descriptionInfos) }}
            {{ form_row(sortieForm.lieu) }}
        <button type="submit">Modifier</button>
        {{ form_end(sortieForm, {'render_rest': false}) }}
    </div>
    <br>
    <div class="annuler">
        <a href="{{ path('annulation', {id : sortie.id}) }}">
            <button type="button" class="btn btn-outline-success btn-sm">Annuler la sortie</button>
        </a>
    </div>

{% endblock %}
